<odoo>


    <record id="view_odoo_module_core_version_search" model="ir.ui.view">
        <field name="model">odoo.module.core.version</field>
        <field name="arch" type="xml">
            <search>
                <field name="module_id"/>
                <field name="serie_id"/>
            </search>
        </field>
    </record>

    <record id="view_odoo_module_core_version_tree" model="ir.ui.view">
        <field name="model">odoo.module.core.version</field>
        <field name="arch" type="xml">
            <tree>
                <field name="module_id"/>
                <field name="serie_id"/>
                <field name="next_version_state"/>
            </tree>
        </field>
    </record>

    <record id="view_odoo_module_core_version_form" model="ir.ui.view">
        <field name="model">odoo.module.core.version</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <group>
                        <field name="module_id"/>
                        <field name="serie_id"/>
                        <field name="next_version_state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_odoo_module_core_version" model="ir.actions.act_window">
        <field name="name">Odoo Module Core Versions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.module.core.version</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_odoo_module_core_version"
        parent="menu_main_migration_analysis"
        sequence="3"
        action="action_odoo_module_core_version"/>

</odoo>
